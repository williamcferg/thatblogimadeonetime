{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    {{!-- <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav> --}}
    <div class="vertical">
        <div class="main-header-content inner">
            <div class="header-left">
                {{#if @blog.logo}}<img class="header-image" src="{{@blog.logo}}" alt="{{@blog.title}}" />{{/if}}
            </div>
            <div class="header-right">
                {{#if @blog.title}}<h1 class="page-title">{{@blog.title}}</h1>{{/if}}
                <h2 id="blog_description" class="page-description"></h2>
            </div>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

    {{!-- This is the block that contains all of the tags --}}
    <div class="tag-cloud">
        <h3>Archive</h3>
        {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
            <ul>
                {{#foreach tags}}
                    <li><a href="/tag/{{slug}}">{{name}}<span>{{count.posts}}</span></a></li>
                {{/foreach}}
            </ul>
        {{/get}}
    </div>

    {{!-- email catch --}}
    <div class="email-catch">
        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
            <form action="//spencermccullough.us9.list-manage.com/subscribe/post?u=babf55f8eba75e1080ff0372f&amp;id=48f524df84" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                <h5>RECEIVE AN EMAIL WHEN I PUBLISH A NEW POST - THAT'S IT</h5>
            <div class="mc-field-group">
                <input placeholder="Email" type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
            </div>
            <div class="mc-field-group">
                <input placeholder="First Name" type="text" value="" name="FNAME" class="" id="mce-FNAME">
            </div>
            <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
            <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
            </div> 
               <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_babf55f8eba75e1080ff0372f_48f524df84" tabindex="-1" value=""></div>
            </div>
            </form>
        </div>
        <!--End mc_embed_signup-->
    </div>

    <section class="icon-section">
        <div class="icon-container">
            <a href="" id="twitter"><i class="fa fa-twitter"></i></a>
            <a href="" id="github"><i class="fa fa-github"></i></a>
            <a href="" id="instagram"><i class="fa fa-instagram"></i></a>
            <a href="" id="facebook"><i class="fa fa-facebook"></i></a>
        </div>
    </section>

    {{! Previous/next page links - displayed on every page }}
    {{pagination}}

</main>
